# Default configuration values for JobSpy Docker API
# This file is committed to version control
# For local overrides, use .env.local which is not committed

# Application Settings
# Set to true to enable debug logging (including health checks)
DEBUG=false
# Or set specific log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
ENVIRONMENT=production

# API Security (use placeholder values in committed .env)
ENABLE_API_KEY_AUTH=false
API_KEYS=
API_KEY_HEADER_NAME=x-api-key

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_TIMEFRAME=3600

# Proxy Configuration
DEFAULT_PROXIES=
CA_CERT_PATH=

# JobSpy Default Settings
DEFAULT_SITE_NAMES=indeed,linkedin,zip_recruiter,glassdoor,google,bayt,naukri
DEFAULT_RESULTS_WANTED=20
DEFAULT_DISTANCE=50
DEFAULT_DESCRIPTION_FORMAT=markdown
DEFAULT_COUNTRY_INDEED=USA

# Caching
ENABLE_CACHE=false
CACHE_EXPIRY=3600

# CORS
CORS_ORIGINS=*

# Health Endpoints
ENABLE_HEALTH_ENDPOINTS=true
ENABLE_DETAILED_HEALTH=true
